<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginRegisterEt">
        <item name="android:textCursorDrawable">@drawable/text_cur_bg</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorCommonText</item>
        <item name="android:textColorHint">@color/colorCommonHint</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ErrorTv">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:layout_marginLeft">55dp</item>
        <item name="android:layout_marginRight">55dp</item>
    </style>

    <style name="PickPhotoDialog" parent="Animation.AppCompat.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@color/colorDialogBackground</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>

</resources>
