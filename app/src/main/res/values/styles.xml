<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginRegisterEt">
        <item name="android:textCursorDrawable">@drawable/text_cur_bg</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorCommonText</item>
        <item name="android:textColorHint">@color/colorCommonHint</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ErrorTv">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:layout_marginLeft">55dp</item>
        <item name="android:layout_marginRight">55dp</item>
    </style>

</resources>
