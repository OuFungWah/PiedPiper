<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/register_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingTop="75dp">

        <EditText
            android:id="@+id/register_account_et"
            style="@style/LoginRegisterEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Account"
            android:imeOptions="actionNext"
            android:inputType="text" />

        <TextView
            android:id="@+id/register_account_error_tv"
            style="@style/ErrorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*账户错误提示*" />

        <EditText
            android:id="@+id/register_nickname_et"
            style="@style/LoginRegisterEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12.5dp"
            android:hint="Nickname"
            android:imeOptions="actionNext"
            android:inputType="text" />

        <TextView
            android:id="@+id/register_nickname_error_tv"
            style="@style/ErrorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*名字错误提示*" />

        <EditText
            android:id="@+id/register_password_et"
            style="@style/LoginRegisterEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12.5dp"
            android:hint="Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/register_password_error_tv"
            style="@style/ErrorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*密码错误提示*" />

        <EditText
            android:id="@+id/register_confirm_password_et"
            style="@style/LoginRegisterEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:hint="ConfirmPassword"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/register_confirm_password_error_tv"
            style="@style/ErrorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*再次输入错误提示*" />

    </LinearLayout>

    <ImageView
        android:id="@+id/register_avatar_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/info_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-37.5dp"
        android:elevation="3dp"
        android:src="@drawable/logo_grey" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/info_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp"
        android:background="@drawable/login_btn_bg"
        android:text="register"
        android:textColor="@android:color/white" />

</RelativeLayout>